{
  "rules": {
    "security-pairings": {
      "$pairingCode": {
        ".read": true,
        ".write": "auth != null",
        ".indexOn": ["createdAt", "lastUpdated", "isActive"],
        "alerts": {
          "$alertId": {
            ".write": "auth != null",
            ".read": true,
            ".indexOn": ["timestamp"]
          }
        },
        "devices": {
          "$role": {
            ".read": true,
            ".write": "auth != null",
            ".indexOn": ["lastActive", "isOnline"]
          }
        }
      }
    }
  }
}